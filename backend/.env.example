# Backend Server Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server port (default: 3001)
PORT=3001

# Environment: development, production, or test
NODE_ENV=development

# Frontend URL for CORS and WebSocket connections
# For production: https://your-domain.com
FRONTEND_URL=http://localhost:3000

# ============================================
# JWT AUTHENTICATION
# ============================================

# Secret key for JWT token generation
# Generate a strong random string (at least 32 characters)
# You can generate one with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# JWT token expiration time (e.g., 7d, 24h, 1h)
JWT_EXPIRES_IN=7d

# ============================================
# DATABASE (SUPABASE)
# ============================================

# Supabase project URL
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Service Role Key (has full access)
# IMPORTANT: Keep this secret! Never expose it in frontend code.
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# REDIS (CACHING)
# ============================================

# Redis connection URL
# Format: redis://[username]:[password]@[host]:[port]
# For local development: redis://localhost:6379
# For production: redis://your-redis-host:6379
REDIS_URL=redis://localhost:6379

# ============================================
# IPFS (DECENTRALIZED STORAGE)
# ============================================

# IPFS API endpoint
# Default: https://ipfs.infura.io:5001/api/v0
# Or use your own IPFS node
IPFS_API_URL=https://ipfs.infura.io:5001/api/v0

# IPFS Gateway URL for accessing files
# Default: https://ipfs.io/ipfs/
IPFS_GATEWAY=https://ipfs.io/ipfs/

# IPFS Authentication (optional)
# Format: Basic base64(username:password)
# Leave empty if not using authentication
IPFS_AUTH=

# ============================================
# PINATA (IPFS PINNING SERVICE)
# ============================================

# Pinata API Key
# Get from: https://app.pinata.cloud/developers/api-keys
PINATA_API_KEY=your_pinata_api_key_here

# Pinata Secret API Key
# Get from: https://app.pinata.cloud/developers/api-keys
PINATA_SECRET_KEY=your_pinata_secret_key_here

# ============================================
# BLOCKCHAIN (POLYGON)
# ============================================

# Polygon Mainnet RPC URL
# Get a free RPC URL from: https://www.alchemy.com/, https://infura.io/, or https://polygon-rpc.com/
POLYGON_RPC_URL=https://polygon-rpc.com

# Alternative RPC URL (if POLYGON_RPC_URL is not set)
RPC_URL=https://polygon-rpc.com

# Private key of the wallet that will submit records to blockchain
# IMPORTANT: Never commit your actual private key to version control!
# This wallet should have MATIC for gas fees
PRIVATE_KEY=your_private_key_here

# Smart contract address (after deployment)
# Get this from the contract deployment output
CONTRACT_ADDRESS=your_contract_address_here

# ============================================
# LOGGING
# ============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info
